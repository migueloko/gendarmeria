<p id="notice"><%= notice %></p>

<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">RECINTOS</div>

  <!-- Table -->
  <table class="table">


    <tr>
      <th>Codigo</th>
      <th>Nombre</th>
      <th>Ubicacion</th>
      <th>Cantidad reo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recintos.each do |recinto| %>
      <tr>
        <td><%= recinto.codigo %></td>
        <td><%= recinto.nombre %></td>
        <td><%= recinto.ubicacion %></td>
        <td><%= recinto.cantidad_reo %></td>
        <td><%= link_to 'Show', recinto %></td>
        <td><%= link_to 'Edit', edit_recinto_path(recinto) %></td>
        <td><%= link_to 'Destroy', recinto, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

