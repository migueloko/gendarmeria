<p id="notice"><%= notice %></p>

<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">RECINTOS</div>

  <!-- Table -->
  <table class="table">


    <tr>
      <th>Ficha ingreso</th>
      <th>Reo</th>
      <th>Observaciones</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ficha_recintos.each do |ficha_recinto| %>
      <tr>
        <td><%= ficha_recinto.ficha_ingreso.codigo_ficha %></td>
        <td><%= ficha_recinto.reo.nombre %></td>
        <td><%= ficha_recinto.observaciones %></td>
        <td><%= link_to 'Show', ficha_recinto %></td>
        <td><%= link_to 'Edit', edit_ficha_recinto_path(ficha_recinto) %></td>
        <td><%= link_to 'Destroy', ficha_recinto, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

